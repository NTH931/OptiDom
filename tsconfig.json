{
  "compilerOptions": {
    "target": "ES6",
    "module": "None",
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "checkJs": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outFile": "dist/optidom.js",
    "types": [
      "./types/optidom.d.ts",
      "./types/optidom.lib.d.ts",
      "./types/deprecation.d.ts",
      "./types/alterations.d.ts",
      "./types/classes.d.ts"
    ],
    "lib": ["DOM", "ES2021", "ESNext"]
  },
  "include": [
    "types/**/*",
    "src/**/optidom.ts"
  ],
  "exclude": ["scripts/*"]
}