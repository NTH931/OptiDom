{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "checkJs": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/",
    "types": [
      "./types/optidom.d.ts",
      "./types/optidom.lib.d.ts",
      "./types/deprecation.d.ts",
      "./types/alterations.d.ts",
      "./types/classes.d.ts"
    ],
    "lib": ["DOM", "ES2020", "ESNext"]
  },
  "include": [
    "types/**/*",
    "src/**/*"
  ],
  "exclude": ["scripts/*"]
}